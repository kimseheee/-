extends ../layout

block content
  .container
    h1.page-header 검색된 숙소 
    table.table.table-bordered
      thead
        tr
          th 이메일
          th 제목
          th 날짜
          th 조회수
          th 댓글수

      tbody
        each post in posts
          tr
            td= post.email
            td
              a(href='/posts/#{post.id}')= post.title
            td= moment(post.createdAt).format('YYYY-MM-DD HH:mm:ss')
            td= post.read
            td= post.numComment

