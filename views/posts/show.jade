extends ../layout

block content
  .container
    h1.page-header= post.title
    p
      b by #{post.email}
      | 
      span at #{moment(post.createdAt).format('YYYY-MM-DD HH:mm:ss')} 
      | 
      | (조회수 #{post.read})
    p
      label= "Title"
      p.well= post.title
      label= "Country"
      p.well= post.country
      label= "Address"
      p.well= post.address
      label= "Price"
      p.well= post.price
      label= "Facility"
      p.well= post.address
      label= "Rule"
      p.well= post.address
      label= "Content"
      p.well= post.content
    
    a.btn.btn-default(href='/posts/index') 목록
