  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') 
        i.fa.fa-home
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav
        if(currentUser)
          if(currentUser.manager)
            li
              a(href='/users') Users
      ul.nav.navbar-nav.navbar-right
        if (!currentUser) 
          li
            a(href='/signin') Signin
          li
            a(href='/users/new') Signup
        else
          li
            a(href='/hosting') Hosting
          li.dropdown
            a(class='dropdown-toggle', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false') Profile
              ul.dropdown-menu
                li
                  a(href='/users/#{currentUser._id}') Profile
                li
                 a(href='/posts/#{currentUser._id}/hostingInfo') HostingInfo
                li
                 a(href='/hosts/#{currentUser._id}/reservationInfo') ReservationInfo 
                li
                 a(href='/hosts/confirm') ConfirmReservation 
          li
            a(href='/signout') Signout
          